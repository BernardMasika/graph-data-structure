{
    "compilerOptions": {
        "allowJs": false,
        "declaration": true,
        "esModuleInterop": true,
        "declarationMap": true,
        "module": "CommonJS",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strict": true,
        "target": "ES5",
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "downlevelIteration": true
    },
    "file": ["index.ts"],
    "exclude": ["node_modules", "*.d.ts"]
}
